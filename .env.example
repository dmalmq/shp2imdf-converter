# FastAPI runtime
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO
CORS_ALLOWED_ORIGINS=http://localhost:5173

# Session management
SESSION_TTL_HOURS=24
MAX_SESSIONS=5
SESSION_BACKEND=memory
SESSION_DATA_DIR=./data/sessions

# File handling
MAX_UPLOAD_MB=1024
TEMP_DATA_DIR=./data/tmp

# Geocoding (wizard address assist)
GEOCODER_PROVIDER=nominatim
GEOCODER_BASE_URL=https://nominatim.openstreetmap.org
GEOCODER_USER_AGENT=shp2imdf-converter/1.0
GEOCODER_TIMEOUT_SECONDS=8
GEOCODER_CACHE_SECONDS=900
GEOCODER_CACHE_MAX_ENTRIES=512
